<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lista de Viviendas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Alquiler de Viviendas</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/create">Crear Cliente</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/create-vivienda">Crear Vivienda</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/create-contrato">Contrato</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/pago">Pago</a>
            </li>
          </ul>
        </div>
      </div>
  </nav>

    <div class="container">
            <a href="/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-user-plus bx-md'></i></a>
            <a href="/list" class="btn btn-outline-primary mt-4"><i class='bx bxs-home bx-md'></i></a>
            <a href="/contrato" class="btn btn-outline-primary mt-4"><i class='bx bxs-wallet bx-md'></i></a>

            <table class="table table-striped table-bordered table-striped text-center mt-4"> 
                <thead> 
                    <tr class="bg-primary text-white"> 
                      <th scope="col">ID</th>
                        <th scope="col">NOMBRE</th>
                        <th scope="col">DESCRIPCION</th>
                        <th scope="col">DIRECION</th>
                        <th scope="col">HABITACIONES</th>
                        <th scope="col">BANIOS</th>
                        <th scope="col">MT2</th>
                        <th scope="col">VIVIENDA</th>
                        <th scope="col">Contrato</th>
                    </tr>
                </thead>
                <tbody>
                  <% results.rows.forEach((i) =>{ %>
                    <tr>
                    <td><%= i.id %></td>
                    <td><%= i.n %></td>
                    <td><%= i.des %></td>
                    <td><%= i.dir %></td> 
                    <td><%= i.h %></td> 
                    <td><%= i.bn %></td> 
                    <td><%= i.m %></td> 
                    <td><%= i.dd %></td> 
                    <td> <a href="/contrato" class="btn btn-outline-info "><i class='bx bx-edit-alt bx-md'></i></a></td>
                </tr>
                <% }); %>
                </tbody>
        </table>
    </div>
    
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>