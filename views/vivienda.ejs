    <div class="container">
            <a href="/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-user-plus bx-md'></i></a>
            <a href="/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-home bx-md'></i></a>
            <a href="/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-wallet bx-md'></i></a>
    </div>
    <div class="container mt-4">
        <div class="card border-secondary">
           <div class="card-header">Registro vivenda </div>
           <div class="card-body">

               <form action="/saveVivienda" method="POST">

                <div class="mb-3">
                  <label  class="form-label">Nombre</label>
                  <input type="text" class="form-control" id="nombre" name="nombre" >
                </div>
                <div class="mb-3">
                    <label class="form-label">Descripticion</label>
                    <textarea class="form-control" id="descripcion" name="descripcion" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label  class="form-label">Direccion</label>
                    <textarea class="form-control" id="direccion" name="direccion" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <div class="row g-2">
                        <div class="col-md">
                          <div class="form-floating">
                            <select class="form-select" aria-label="Default select example"  id="habitaciones" name="habitaciones">
                                <option selected></option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="4">5</option>
                                <option value="5">+5</option>
                              </select>
                              <label>Numero de Habitaciones</label>
                          </div>
                        </div>
                        <div class="col-md">
                          <div class="form-floating">
                            <select class="form-select" aria-label="Default select example"  id="banio" name="banios">
                              <option selected>  </option>
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                              <option value="4">+4</option>
                            </select>
                            <label>Numero de Banios</label>
                          </div>
                        </div>
                        <div class="col-md">
                            <div class="form-floating">
                              <select class="form-select" aria-label="Default select example" id="id_vivienda" name="id_vivienda">
                                <option selected>  </option>
                                <option value="1">Casa</option>
                                <option value="2">Apartamento</option>
                              </select>
                              <label>Tipo de Vivienda</label>
                            </div>
                          </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Metros cuadrado</label>
                        <input type="text" class="form-control" id="mt2" name="mt2" >
                      </div>
                    <div class="mb-1">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a href="/" class="btn btn-secondary">Cancel</a>
                    </div>

                </form>
           </div>
        </div>
    </div>
    
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
